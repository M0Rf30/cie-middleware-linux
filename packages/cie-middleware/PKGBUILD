  "libcurl4"
  "libfreetype6"
  "libfontconfig1"
  "libpcsclite1"
  "libpng16-16"
  "libssl3"
  "libxml2"
  "openjdk-17-jre-headless"
  "pcscd"
)
makedepends__apt=(
  "g++"
  "libcrypto++-dev"
  "libcurl4-openssl-dev"
  "libfontconfig1-dev"
  "libfreetype6-dev"
  "libpcsclite-dev"
  "libpng-dev"
  "libssl-dev"
  "libxml2-dev"
