depends__yum=(
  "cryptopp"
  "fontconfig"
  "freetype"
  "java-17-openjdk-headless"
  "libcurl"
  "libpng"
  "libxml2"
  "openssl"
  "pcsc-lite"
)
makedepends__yum=(
  "cryptopp-devel"
  "fontconfig-devel"
  "freetype-devel"
  "gcc-c++"
  "java-17-openjdk-devel"
  "libcurl-devel"
  "libpng-devel"
  "libxml2-devel"
  "meson"
  "openssl-devel"
  "pcsc-lite-devel"
  "pkgconf-pkg-config"
)

build__pacman() {
  export JAVA_HOME=/usr/lib/jvm/default/
  cp "${srcdir}/libpodofo.a" \
    "${srcdir}/${pkgname}-linux-${pkgver}/libs/lib"

  cd "${srcdir}/${pkgname}-linux-${pkgver}"
  cie-java/gradlew -b cie-java/build.gradle standalone
  meson setup builddir libs
  meson configure -Dprefix=/usr builddir
  meson compile -C builddir
}

build__yum() {
  export JAVA_HOME=/usr/lib/jvm/java-17-openjdk/
  cp "${srcdir}/libpodofo.a" \
    "${srcdir}/${pkgname}-linux-${pkgver}/libs/lib"

  cd "${srcdir}/${pkgname}-linux-${pkgver}"
  cie-java/gradlew -b cie-java/build.gradle standalone
  meson setup builddir libs
  meson configure -Dprefix=/usr builddir
  meson compile -C builddir
}

build__apt() {
  export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
  pip3 install ninja==1.10.2.3 meson==0.61.1
  cp "${srcdir}/libpodofo.a" \
    "${srcdir}/${pkgname}-linux-${pkgver}/libs/lib"

  cd "${srcdir}/${pkgname}-linux-${pkgver}"
  cie-java/gradlew -b cie-java/build.gradle standalone

  meson setup builddir libs
  meson configure -Dprefix=/usr builddir
  meson compile -C builddir
}

package() {
  cd "${srcdir}/${pkgname}-linux-${pkgver}"

  # Java Application
  install -Dm755 cie-java/build/libs/CIEID-standalone.jar \
    "${pkgdir}/usr/share/cieid/cieid.jar"
  install -Dm644 "data/app.m0rf30.cieid.desktop" \
    "${pkgdir}/usr/share/applications/app.m0rf30.cieid.desktop"
  install -Dm755 data/app.m0rf30.cieid.png \
    "${pkgdir}/usr/share/icons/hicolor/256x256/apps/app.m0rf30.cieid.png"
  install -Dm755 "data/cieid.sh" \
    "${pkgdir}/usr/bin/cieid"
  install -Dm644 LICENSE \
    "${pkgdir}/usr/share/licenses/cieid/LICENSE"

  # Lib
  DESTDIR="${pkgdir}" meson install -C builddir
}
